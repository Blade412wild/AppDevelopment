<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstAppGame.LivingRoomP"
             Title="LivingRoomP">
    <VerticalStackLayout Spacing="10">

        <Image
                Source="livingroomp.png"
                HeightRequest="600"
                HorizontalOptions="Center" />
        <Label 
            Text="Livingroom"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <VerticalStackLayout>

            <HorizontalStackLayout Spacing="10"
                                   HorizontalOptions="Center" >
                <Label 
                    Text="Hunger: 100%"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
                <Label 
                    Text="Thirst: 100%"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
                <Label 
                    Text="Sleep: 100%"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />


            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10"
                                   HorizontalOptions="Center" >
                <Label 
                    Text="Overstimulated: 100%"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
                <Label 
                    Text="Bored: 100%"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
                <Label 
                    Text="Lonely: 100%"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
        <HorizontalStackLayout Spacing="10"
                               HorizontalOptions="Center">
            <Button
                Text="ChillRoom"
                HorizontalOptions="Center" 
                Clicked="OnPreviousRoomClicked" />

            <Button
                Text="Corridor"
                HorizontalOptions="Center" 
                Clicked="OnNextRoomClicked" />

        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>